{
    "app": {
        "name": "LaptopTester",
        "version": "1.5.0",
        "build": "20250926",
        "author": "LaptopTester Team",
        "description": "Professional laptop testing suite"
    },
    "ui": {
        "theme": "auto",
        "animation_duration": 300,
        "fade_steps": 10,
        "window_size": {
            "width": 1400,
            "height": 900,
            "min_width": 1200,
            "min_height": 800
        },
        "colors": {
            "primary": "#3498DB",
            "success": "#27AE60",
            "warning": "#F39C12",
            "error": "#E74C3C",
            "background": "#F5F7FA"
        }
    },
    "testing": {
        "timeouts": {
            "disk_benchmark": 300,
            "cpu_stress": 60,
            "gpu_stress": 60,
            "memory_stress": 30,
            "combined_stress": 90
        },
        "thresholds": {
            "battery_health_good": 80,
            "battery_health_warning": 60,
            "cpu_temp_warning": 85,
            "cpu_temp_critical": 95,
            "disk_speed_good": 100,
            "memory_usage_warning": 90
        },
        "auto_advance": {
            "enabled": true,
            "delay_ms": 500,
            "skip_on_success": ["SystemHardwareStep", "BatteryInfoStep"]
        }
    },
    "logging": {
        "level": "INFO",
        "max_log_files": 10,
        "log_rotation_days": 30,
        "detailed_logging": false
    },
    "external_tools": {
        "crystaldiskmark": {
            "enabled": true,
            "auto_install": true,
            "winget_id": "CrystalDewWorld.CrystalDiskMark"
        },
        "librehardwaremonitor": {
            "enabled": true,
            "path": "bin/LibreHardwareMonitor/LibreHardwareMonitor.exe",
            "auto_start": false
        },
        "stress_ng": {
            "enabled": false,
            "path": "tools/stress-ng/stress-ng.exe"
        }
    },
    "features": {
        "advanced_gpu_tests": true,
        "network_tests": true,
        "webcam_tests": true,
        "audio_tests": true,
        "keyboard_tests": true,
        "export_pdf": true,
        "export_json": true,
        "cloud_sync": false
    },
    "notifications": {
        "toast_duration": 3000,
        "show_success": true,
        "show_warnings": true,
        "show_errors": true,
        "sound_enabled": false
    },
    "performance": {
        "enable_caching": true,
        "cache_max_size": 50,
        "background_processing": true,
        "worker_timeout": 300,
        "max_workers": 4
    },
    "user_preferences": {
        "remember_window_position": true,
        "auto_save_results": true,
        "confirm_exit": true,
        "skip_intro": false,
        "expert_mode_default": false
    }
}